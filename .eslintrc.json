{
    "settings": {
        "react": {
            "version": "detect"
        }
    },
    "env": {
        "browser": true,
        "es2023": true
    },
    "extends": [
        "standard",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        // Prevent ESLint error - 'React' must be in scope when using JSX (I want to only import the Component module, not all of React)
        "react/react-in-jsx-scope": "off",
        "react/prop-types": "off",
        "react/no-unescaped-entities": "off",
        "react/no-unknown-property": "warn",
        "import/no-duplicates": "off",
        "multiline-ternary": "off",
        //
        "space-before-function-paren": "off",
        "no-undef": "off",
        "no-tabs": "warn",
        "indent": [
            "warn",
            4,
            {
                "SwitchCase": 1
            }
        ],
        "quotes": [
            "warn",
            "single"
        ],
        "semi": [
            "warn",
            "always"
        ],
        "no-array-constructor": "warn",
        "no-unused-vars": "warn",
        "eqeqeq": "warn",
        "no-console": "warn"
    }
}
